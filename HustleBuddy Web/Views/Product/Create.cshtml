@model HustleBuddy_Web.Models.Product

<form asp-action="Add">
    <div class="modal-header">
        <h5 class="modal-title" id="add-view-editLabel">Create Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="vendorId" type="hidden" />
        <input asp-for="productCode" type="hidden" />
        <input asp-for="costPrice" type="hidden" />
        <input asp-for="discountPrice" type="hidden" />
        <div class="form-group mb-2">
            <input asp-for="productName" value="" placeholder="Product Name" class="form-control" style="border: 1px solid mediumpurple;" required />
            <span asp-validation-for="productName" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <input type="number" step="any" asp-for="sellingPrice" value="" placeholder="Selling Price" class="form-control" style="border: 1px solid mediumpurple;" required />
            <span asp-validation-for="sellingPrice" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <input asp-for="description" placeholder="Product Description" class="form-control" style="border: 1px solid mediumpurple;" required />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success w-25">Create</button>
    </div>
</form>

